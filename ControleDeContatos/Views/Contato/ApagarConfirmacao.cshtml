@model ContatoModel

@{
	ViewData["Title"] = "Confirmação de exclusão de um contato";
}


<h1>Confirmação de exclusão de um Contato</h1>


<div class="text-center">
	<h3>Realmente deseja excluir o contato (@Model.Nome)</h3>
</div>


<a class="btn btn-danger" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>
<a asp-controller="Contato" asp-action="Index" class="btn btn-danger">Cancelar</a>


